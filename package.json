{
  "name": "miobot",
  "version": "0.0.0",
  "author": "Yasuaki Uechi <y@uechi.io> (https://uechi.io/)",
  "scripts": {
    "build": "run-p build:*",
    "build:server": "tsc",
    "build:web": "yarn --cwd src/web build",
    "dev": "FORCE_COLOR=true run-p dev:* | cat",
    "dev:server": "nodemon -w dist --exec node dist/server.js",
    "dev:tsc": "tsc -w",
    "dev:web": "PORT=5000 BROWSER=none yarn --cwd src/web start",
    "heroku-prebuild": "yarn --cwd src/web install",
    "job": "node dist/job.js",
    "ngrok": "ngrok http 3000",
    "ship": "git push heroku master",
    "start": "node dist/server.js"
  },
  "main": "dist/server.js",
  "dependencies": {
    "bytes": "^3.1.0",
    "date-fns": "^2.16.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^5.10.2",
    "node-fetch": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "styled-components": "^5.1.1",
    "telegraf": "^3.38.0",
    "telegraf-session-redis": "^5.1.0",
    "typescript": "^4.0.2"
  },
  "devDependencies": {
    "@types/bytes": "^3.1.0",
    "@types/express": "^4.17.8",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.6.2",
    "@types/node-fetch": "^2.5.7"
  },
  "license": "Apache-2.0"
}
